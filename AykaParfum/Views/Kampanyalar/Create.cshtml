@model KampanyaModel


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yeni Kampanya</title>
</head>
<body>

    <div class="container-fluid bg-secondary my-5">
        <div class="row justify-content-md-center py-5 px-xl-5">
            <div class="col-md-6 col-12 py-5">
                <div class="text-center mb-2 pb-2">
                    <h4>Kampanya</h4>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                            <form asp-action="Create">
                                @Html.AntiForgeryToken()
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row mb-3">
                                    <label asp-for="Adi" class="col-2 col-form-label"></label>
                                    <div class="col-5">
                                        <input asp-for="Adi" class="form-control" />
                                        <span asp-validation-for="Adi" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="Aciklamasi" class="col-2 col-form-label"></label>
                                    <div class="col-5">
                                        <textarea asp-for="Aciklamasi" class="form-control" rows="3"></textarea>
                                        <span asp-validation-for="Aciklamasi" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label asp-for="AktifMi" class="col-2 col-form-label"></label>
                                    <div class="col-5" style="padding-top: 7px;">
                                        <input class="form-check-input" asp-for="AktifMi" />
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="offset-2 col-5">
                                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                                        &nbsp;&nbsp;
                                        <button type="reset" class="btn btn-outline-primary">Temizle</button>
                                        &nbsp;&nbsp;
                                        <hr />
                                        <a asp-action="Index"><i class="fa fa-arrow-left"></i> Kampanya Listesi</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @*@section Scripts {*@
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }*@
</body>
</html>
