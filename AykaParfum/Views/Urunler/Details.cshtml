@model UrunModel

@{
    string imgSrc = "/files/noImage.png";
    if (!string.IsNullOrWhiteSpace(Model.ImgSrcDisplay))
        imgSrc = Model.ImgSrcDisplay;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detaylar</title>
</head>
<body>

    <div class="container-fluid bg-secondary my-5">
        <div class="row justify-content-md-center py-5 px-xl-5">
            <div class="col-md-6 col-12 py-5">
                <div class="text-center mb-2 pb-2">

                    <div>
                        <h4>Ürün Detay</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.Adi)
                            </dt>
                            <dd class="col-10">
                                @Html.DisplayFor(model => model.Adi)
                            </dd>
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.Aciklamasi)
                            </dt>
                            <dd class="col-10">
                                @Html.DisplayFor(model => model.Aciklamasi)
                            </dd>
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.BirimFiyatiDisplay)
                            </dt>
                            <dd class="col-10">
                                @Html.DisplayFor(model => model.BirimFiyatiDisplay)
                            </dd>
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.PiyasaSatisFiyatiDisplay)
                            </dt>
                            <dd class="col-10">
                                @Html.DisplayFor(model => model.PiyasaSatisFiyatiDisplay)
                            </dd>
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.StokMiktari)
                            </dt>
                            <dd class="col-10">
                                @Html.DisplayFor(model => model.StokMiktari) adet
                            </dd>
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.MarkaAdiDisplay)
                            </dt>
                            <dd class="col-10">
                                @Html.DisplayFor(model => model.MarkaAdiDisplay)
                            </dd>
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.KategoriAdiDisplay)
                            </dt>
                            <dd class="col-10">
                                @Html.DisplayFor(model => model.KategoriAdiDisplay)
                            </dd>
                            <dt class="col-2">
                                @Html.DisplayNameFor(model => model.ImgSrcDisplay)
                            </dt>
                            <dd class="col-10">
                                <img src="@imgSrc" class="img-fluid w-100" />
                            </dd>

                        </dl>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model?.Id">Düzenle</a>&nbsp;|&nbsp;
                        <a asp-action="Index"><i class="fa fa-arrow-left"></i> Ürün Listesi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
