

@model IEnumerable<KullaniciModel>


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kullanıcı</title>
</head>
<body>
    <div class="container-fluid bg-secondary my-5">
        <div class="row justify-content-md-center py-1 px-xl-1">
            <div class="col-md-6 col-12 py-5">
                <div class="text-center mb-2 pb-2">

                    @*<p>
                        <a asp-action="Create"><i class="fa fa-plus" aria-hidden="true"></i> Yeni Kullanıcı</a>
                    </p>*@
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.KullaniciAdi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sifre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AktifMi)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.RolAdiDisplay)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KullaniciAdi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sifre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AktifMi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RolAdiDisplay)
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">Detay</a>&nbsp;|&nbsp;
                                        @*<a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>&nbsp;|&nbsp;
                                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>*@
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
