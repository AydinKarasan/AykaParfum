@using AykaParfum.Areas.Raporlar.Models

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model UrunRaporViewModel


@{
    ViewData["Title"] = "Ürünler";
    Layout = "_Layout";
}

<div class="container-fluid bg-secondary my-5">
    <div class="row justify-content-md-center py-1 px-xl-1">
        <div class="col-md-11 col-12 py-5">
            <div class="text-center mb-2 pb-2">

                <h4>@ViewData["Title"]</h4>


                @*<div class="row">
                    <div class="col-2">
                        <h5>Hızlı Arama</h5>
                        
                    </div>*@
                    <div class="col-10">
                        <form asp-action="Index" asp-controller="Raporlar" asp-area="Raporlar" method="get" id="form">
                            @*<h5>Rapor</h5>*@
                            <div class="row">
                                <div class="col-1">
                                    <label asp-for="Filtre.KategoriId"></label>
                                </div>
                                <div class="col-3">
                                    <select asp-for="Filtre.KategoriId" asp-items="Model.Kategoriler" class="form-control input">
                                        <option value="">-- Tümü --</option>
                                    </select>
                                </div>
                                <div class="col-1">
                                    <label asp-for="Filtre.UrunAdi"></label>
                                </div>
                                <div class="col-3">
                                    <input asp-for="Filtre.UrunAdi" class="form-control input" />
                                </div>

                                <div class="col-1">
                                    <label asp-for="Filtre.BirimFiyatiMininmum"></label>
                                </div>
                                <div class="col-3">
                                    <div class="input-group">
                                        <input asp-for="Filtre.BirimFiyatiMininmum" class="form-control input" placeholder="Min" />
                                        <span class="input-group-text">-</span>
                                        <input asp-for="Filtre.BirimFiyatiMaximum" class="form-control input" placeholder="Max">
                                    </div>
                                </div>

                            </div>
                            <div class="row">

                                <div class="col-1">
                                    <label asp-for="Filtre.MarkaIdleri"></label>
                                </div>
                                <div class="col-3">
                                    <select asp-for="Filtre.MarkaIdleri" asp-items="Model.Markalar" class="form-control input"></select>
                                </div>
                                <div class="col-1">
                                    <label asp-for="Filtre.KampanyaIdleri"></label>
                                </div>
                                <div class="col-3">
                                    <select multiple asp-for="Filtre.KampanyaIdleri" asp-items="Model.Kampanyalar" class="form-control input"></select>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary" id="search">Ara</button>
                                    &nbsp;&nbsp;&nbsp;
                                    <a asp-action="Index" class="btn btn-outline-primary">Temizle</a>
                                </div>

                            </div>
                            @if (Model.Sayfa.TotalRecordsCount > 0)
                            {
                                <p class="text-success">@Model.Sayfa.TotalRecordsCount adet kayıt bulundu</p>
                                <div class="row">
                                    <div class="col-1">
                                        Sayfa
                                    </div>
                                    <div class="col-1">
                                        <select asp-for="Sayfa.PageNumber" asp-items="Model.Sayfalar" class="form-control page" id="pagenumber"></select>
                                    </div>
                                    <div class="col-2">
                                        Kayıt Sayısı
                                    </div>
                                    <div class="col-1">
                                        <select asp-for="Sayfa.RecordsPerPageCount" asp-items="Model.SayfadakiKayitSayilari" class="form-control page"></select>

                                    </div>
                                    <div class="col-1">
                                        Sıra
                                    </div>
                                    <div class="col-3">
                                        <select asp-for="Sira.Expression" asp-items="Model.Siralar" class="form-control order"></select>

                                    </div>
                                    <div class="col-3">
                                        <div class="form-check">
                                            <input asp-for="Sira.IsDirectionAscending" class="form-check-input order" type="checkbox" id="sira">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                Artan
                                            </label>
                                        </div>

                                    </div>
                                </div>
                                <input asp-for="Filtre.UrunAdi" type="hidden" />
                                 <div class="container-fluid pt-5">

                        <div class="row px-xl-5 pb-3">

                            @foreach (var item in Model.Rapor)
                            {

                                <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                                    <div class="card product-item border-0 mb-4">
                                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                            @*<img class="img-fluid w-100" src="~/img/product-2.jpg" alt="">*@
                                            @*@if (!string.IsNullOrWhiteSpace(item.ImgSrcDisplay))
                                            {
                                                <a asp-action="DownloadImage" asp-route-urunId="@item.Id"><img src="@item.ImgSrcDisplay" class="img-thumbnail" /></a>
                                            }
                                            else
                                            {
                                                <img src="/img/noImage.jpg" class="img-thumbnail" />
                                            }*@
                                        </div>
                                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                            <h6 class="text-truncate mb-3">@Html.DisplayFor(modelItem => item.urunAdi)</h6>
                                            <div class="d-flex justify-content-center">
                                                <h5 class="text-muted ml-2"><del>@Html.DisplayFor(modelItem => item.BirimFiyatiDisplay)</del></h5>&nbsp;&nbsp;&nbsp;&nbsp;<h5>@Html.DisplayFor(modelItem => item.BirimFiyatiDisplay)</h5>
                                            </div>
                                            <div class="d-flex justify-content-center">
                                                <h6 class="text-muted ml-2">@Html.DisplayFor(modelItem => item.KategoriAdiDisplay)</h6>
                                            </div>
                                        </div>
                                        <div class="card-footer d-flex justify-content-between bg-light border">
                                            <a asp-action="Details" asp-route-id="@item.urunAdi" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i> Detay</a>
                                            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i> Sepete Ekle</a>

                                        </div>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div class="card-footer d-flex justify-content-between bg-light border">
                                                <a asp-action="Delete" asp-route-id="@item.urunAdi" class="btn btn-sm text-dark p-0"><i class="fas fa-trash text-primary mr-1"></i> Sil</a>
                                                <a asp-action="Edit" asp-route-id="@item.urunAdi" class="btn btn-sm text-dark p-0"><i class="fas fa-edit text-primary mr-1"></i> Düzenle</a>
                                            </div>
                                        }

                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                            }
                            else
                            {
                                <p class="text-dark">Kayıt bulunamadı</p>
                            }

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

